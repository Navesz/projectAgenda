<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

            <%- include('includes/messages')  %> 
            <div class="message-email"></div>
            <div class="message-password"></div>

            <div class="row m-2">
                <div class="col-lg border border-dark border-2 rounded me-2 mt-2">
                    <h4 class="my-3">Faça seu cadastro</h4>
                    <form class="form-cadastro" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="mb-3">
                          <input type="email" class="form-control" name="email" placeholder="Enter email">
                        </div>
                        <div class="mb-3">
                          <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-dark mb-3">Registrar</button>
                      </form>

                </div>

                <div class="col-lg border border-dark border-2 rounded mt-2">
                    <h4 class="my-3">Entrar no sistema</h4>
                    <form class="form-login" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %> >
                        <div class="mb-3">
                          <input type="email" class="form-control" name="email" placeholder="Enter email">
                        </div>
                        <div class="mb-3">
                          <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-dark mb-3">Login</button>
                      </form>

                </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>
