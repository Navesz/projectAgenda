<%- include('includes/head') %>
<%- include('includes/nav') %>

<script src="extensions/resizable/bootstrap-table-resizable.js"></script>

<div class="container">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-xl-10 my-5">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Seus contatos est√£o listados abaixo</p>

            <%- include('includes/messages')  %> 

            <div class="tbl-container">
                <table class="table table-light" style="border-radius:8px;overflow:hidden;border-style:solid;">

                    <thead class="table-dark">
                        <tr>
                          <th scope="col">Nome</th>
                          <th scope="col">Sobrenome</th>
                          <th scope="col">Email</th>
                          <th scope="col">Telefone</th>
                          <th scope="col"></th>
                        </tr>
                      </thead>

                    <tbody>
                    <% contatos.forEach((contato) => { %> 
                        <tr class="align-middle">
                            <td><%= contato.nome %></td>
                            <td><%= contato.sobrenome %></td>
                            <td><%= contato.email %></td>
                            <td><%= contato.telefone %></td>
                            <td class="text-end">
                                <a class="btn btn-outline-primary" href="/contato/index/<%= contato._id %>"><i class="bi bi-pencil-square"></i> Editar</a>
                                <a class="btn btn-outline-danger" href="/contato/delete/<%= contato._id %>"><i class="bi bi-file-earmark-x"></i> Excluir</a>
                            </td>

                        </tr>
                    <% }) %> 
                    </tbody>
                </table>
            </div>

        </div>
        <div class="col-lg-1"></div>
    </div>
</div>

<%- include('includes/footer') %>
